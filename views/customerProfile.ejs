

 <%- include('partials/dashboards-header') -%>

<div class="container card-container">

    <div class="p-3 mb-2 bg-dark text-white">
      <h2><strong>Customers Information</strong></h2>
    </div>

    <div class="card">
      <div class="card-header">

                <h3>Name: <%= customers.customerName%></h3>
                <h3>Phone Number: <%= customers.customerPhone%></h3>
                <h3>Email: <%= customers.customerEmail%></h3>
              
              <div class="col-6 mt-5">
                <a class="btn btn-primary" href="/post/<%= customers._id%>">Update Customer</a>
                <a class="btn btn-primary" href="/post/addNewWo/<%= customers._id%>">Add new WO</a>
              </div>

              

      </div>
  </div>

  <div class="row">

    <div class="col-lg-12">

      <ul class="list-group">
      <% jobs.forEach(function(job, i) { %>
      <li class="list-group-item justify-content-center mt-5 card">
        <h3>Item: <%= jobs[i].itemType %></h3>
        <h3>Brand: <%= jobs[i].brand %></h3>
        <h3>Status: <%= jobs[i].status %></h3>
      </li>
      <% }); %>
      </ul>
    </div>
  </div>
  
</div>

<%- include('partials/footer') -%> 